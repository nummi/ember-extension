{{#ui/toolbar-content as |bar|}}
  {{bar.searchField
    class="js-records-search"
    value=searchValue
  }}

  {{bar.divider}}

  <button
    class="{{if noFilterValue "active"}} toolbar__radio js-filter"
    {{action "setFilter"}}
  >
    All
  </button>

  {{#each filters as |item|}}
    {{#record-filter
      model=item
      filterValue=filterValue
    as |filter|
    }}
      <button
        class="{{if filter.checked "active"}} toolbar__radio js-filter"
        {{action "setFilter" filter.model.name}}
      >
        {{filter.model.desc}}
      </button>
    {{/record-filter}}
  {{/each}}
{{/ui/toolbar-content}}
