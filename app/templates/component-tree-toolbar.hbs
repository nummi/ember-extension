<div class="toolbar">
  <button
    class="{{if inspectingViews "active"}} toolbar__icon-button js-inspect-views"
    {{action "toggleViewInspection"}}
  >
    {{svg-jar
      "inspect"
      width="16px"
      height="17px"
    }}
  </button>

  <div class="divider"></div>

  <button
    class="toolbar__icon-button"
    title="expand all"
    {{action "expandOrCollapseAll" true}}
  >
    {{svg-jar
      "chevron-down"
      width="16px"
      height="16px"
    }}
  </button>

  <button
    class="toolbar__icon-button"
    title="collapse all"
    {{action "expandOrCollapseAll" false}}
  >
    {{svg-jar
      "chevron-right"
      width="16px"
      height="16px"
    }}
  </button>

  <div class="divider"></div>

  <div class="toolbar__search js-filter-views">
    {{ui/toolbar-search-field value=searchValue}}
  </div>

  {{#if searchValue}}
    {{#if searchResults}}
      <button
        class="toolbar__icon-button js-search-prev"
        {{action "previousSearchItem"}}
      >
        {{svg-jar "arrow-back" width="12px" height="12px"}}
      </button>

      <button
        class="toolbar__icon-button js-search-prev"
        {{action "nextSearchItem"}}
      >
        {{svg-jar "arrow-forward" width="12px" height="12px"}}
      </button>
      <span>
        <code class="js-search-highlight-index">{{sum searchResultsIndex 1}}</code>
        <span>/</span>
        <code class="js-search-count">{{searchResults.length}}</code>
      </span>
    {{else}}
      no results
    {{/if}}
  {{/if}}
</div>
